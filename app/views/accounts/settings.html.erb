        <%= link_to "Link Instagram", "/auth/instagram" %>
        <br>
      <% end %>
      <%= link_to image_tag("Instagram_Icon_Large.png"), "/auth/instagram", :id => "instagram_login_link" %>
    </div>
  </div>
</div>