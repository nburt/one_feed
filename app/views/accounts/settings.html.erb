        <%= link_to "Link Facebook", "/auth/facebook" %>
        <br>
      <% end %>
      <%= link_to image_tag("FB-f-Logo__blue_50.png"), "/auth/facebook", :id => "facebook_login_link" %>
    </div>
  </div>
  <div class="network_container">
    <div class="network_login">
      <% if current_user && current_user_has_provider?('instagram') %>
        <%= link_to "Relink Instagram", "/auth/instagram" %>
        <br>
