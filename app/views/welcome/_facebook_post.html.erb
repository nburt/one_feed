<div class="individual_post">
  <div class="network_logo">
    <img id="facebook_stream_logo" src="<%= asset_url("FB-f-Logo__blue_50.png") %>">
  </div>
  <div class="post_main">
    <div class="post_header">
      <ul>
        <% if poster_recipient_profile_hash.has_key?(post["from"]["id"]) %>
          <li><img src="<%= poster_recipient_profile_hash[post["from"]["id"]] %>"></li>
        <% end %>
        <li><%= link_to post["from"]["name"], post["from"]["link_to_profile"] %></li>
        <% if post["to"] != nil %>
          <li><%= image_tag("arrow.png", :class => "arrow_image") %></li>
          <li><%= link_to post["to"]["name"], post["to"]["link_to_profile"] %></li>
        <% end %>
        <li><%= time_ago_in_words(post["created_time"]) %> ago</li>
      </ul>
    </div>
    <div class="post_content">
      <ul>
        <% if post["story"] != nil %>
          <li><%= post["story"] %></p></li>
        <% end %>
        <% if post["message"] != nil %>
          <li><%= post["message"] %></li>
        <% end %>
        <% if post["image"] != nil %>
          <li><img src="<%= post["image"]["original_sized_image"] %>"></li>
        <% end %>
        <% if post["caption_text"] %>
          <li><%= post["caption_text"] %></li>
        <% end %>
        <% if post["article_link"] != nil && post["type"] == "link" %>
          <li><%= link_to "link", post["article_link"] %></li>
        <% end %>
      </ul>
      <% if post["story_tags"] != nil %>
        <ul>
          <% post["story_tags"].each do |story_tag| %>
            <li><%= link_to story_tag["name"], story_tag["link_to_profile"] %></li>
          <% end %>
          <% if post["story_tags"].length > 1 %>
            <li>were tagged in this post.</li>
          <% else %>
            <li>was tagged in this post.</li>
          <% end %>
        </ul>
      <% end %>
      <div class="post_stats">
        <ul>
          <li>Comments: <%= post["comments_count"] %></li>
          <li>Likes: <%= post["likes_count"] %></li>
          <% if post["shares_count"] != nil %>
            <li>Shares: <%= post["shares_count"] %></li>
          <% end %>
          <% if post["link_to_post"] != nil %>
            <li>
              <a href="<%= post["link_to_post"] %>">View on Facebook</a>
            </li>
          <% end %>
        </ul>
      </div>
      <% if post["comments"] != nil %>
        <div class="post_comments">
          <ul>
            <% post["comments"].each do |comment| %>
              <li class="commenter_profile_picture"><img src="<%= commenter_profile_hash[comment["from"]["id"]] %>">
              </li>
              <li class="commenter_username">
                <a href="<%= comment["from"]["link_to_profile"] %>" target="_blank"><%= comment["from"]["name"] %></a>
              </li>
              <li><%= time_ago_in_words(comment["created_time"]) %> ago</li>
              <li><%= comment["message"] %></li>
              <li>Likes: <%= comment["like_count"] %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>