<div id="feed_container">
  <% unless @unauthed_accounts.empty? %>
    <div class="unauthed_accounts">
      <h4>The access token for the following accounts have expired. Please click the below links to reauthorize the
        accounts.</h4>
      <ul>
        <% @unauthed_accounts.each do |account| %>
          <li><%= account %>: <a href="/auth/<%= account.downcase %>">Click here to reauthorize <%= account %></a></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @timeline.present? %>
    <% @timeline.each do |post| %>
      <% if post["provider"] == "twitter" %>
        <div class="individual_post">
          <div class="network_logo">
            <img class="provider_logo" src="<%= asset_url("Twitter_logo_blue.png") %>">
          </div>
          <div class="post_main">
            <div class="post_header">
              <img class="user_profile_picture" src="<%= post["profile_picture"] %>">
              <ul>
                <li><a href="<%= post["user_url"] %>"><%= post["user_name"] %></a></li>
                <li>@<%= post["screen_name"] %></li>
                <li><%= time_ago_in_words(post["created_time"]) %> ago</li>
              </ul>
            </div>
            <div class="post_content">
              <ul>
                <li><%= post["tweet_text"] %></li>
                <% if post["tweet_image"].present? %>
                  <li><img src="<%= post["tweet_image"] %>"/></li>
                <% end %>
              </ul>
              <div class="post_stats">
                <ul>
                  <li>Retweets: <%= post["retweet_count"] %></li>
                  <li>Favorites: <%= post["favorite_count"] %></li>
                  <li>
                    <a href="<%= post["link_to_tweet"] %>">View on Twitter</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% elsif post["provider"] == "instagram" %>
        <div class="individual_post">
          <div class="network_logo">
            <img class="provider_logo" src="<%= asset_url("Instagram_Icon_Large.png") %>">
          </div>
          <div class="post_main">
            <div class="post_header">
              <img class="user_profile_picture" src="<%= post["profile_picture"] %>">
              <ul>
                <li><a href="<%= post["user_url"] %>">@<%= post["username"] %></a></li>
                <li><%= time_ago_in_words(post["created_time"]) %> ago</li>
              </ul>
            </div>
            <div class="post_content">
              <ul>
                <li><img src="<%= post["low_resolution_image_url"] %>"></li>
                <% if post["caption_text"] != nil %>
                  <li><%= post["caption_text"] %></li>
                <% end %>
              </ul>
              <div class="post_stats">
                <ul>
                  <li>Comments: <%= post["comments_count"] %></li>
                  <li>Likes: <%= post["likes_count"] %></li>
                  <li>
                    <a href="<%= post["link_to_post"] %>">View on Instagram</a>
                  </li>
                </ul>
              </div>
              <% if post["comments_count"] > 0 %>
                <div class="post_comments">
                  <ul>
                    <% post["comments"].each do |comment| %>
                      <li class="commenter_profile_picture"><img src="<%= comment["from"]["profile_picture"] %>"></li>
                      <li class="commenter_username">
                        <a href="http://www.instagram.com/<%= comment["from"]["username"] %>"><%= comment["from"]["username"] %></a>
                      </li>
                      <li><%= comment["text"] %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      <% end %>
    <% end %>
  <% else %>
    <div id="empty_feed_container">
      <p id="empty_feed">Click one of the below links or visit "Account Settings" to link an account and get started.</p>
      <div class="network_container">
        <div class="network_login">
          <a href="/auth/twitter">Link Twitter</a><br>
          <a href="/auth/twitter" id="twitter_login_link"><img src="<%= asset_url("Twitter_logo_blue.png") %>"></a>
        </div>
      </div>
      <div class="network_container">
        <div class="network_login">
          <a href="/auth/facebook">Link Facebook</a><br>
          <a href="/auth/facebook" id="facebook_login_link"><img src="<%= asset_url("FB-f-Logo__blue_50.png") %>"></a>
        </div>
      </div>
      <div class="network_container">
        <div class="network_login">
          <a href="/auth/instagram">Link Instagram</a><br>
          <a href="/auth/instagram" id="instagram_login_link"><img src="<%= asset_url("Instagram_Icon_Large.png") %>"></a>
        </div>
      </div>
    </div>
  <% end %>
</div>